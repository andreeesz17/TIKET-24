def encontrarMenor(valor1,valor2,valor3,valor4):
    menoractual=valor1
    if valor2 < menoractual:
        menoractual=valor2
        if valor3 < menoractual:
            menoractual=valor3
            if valor4 < menoractual:
                menoractual=valor4
            else:
             return menoractual     
        else:
         return menoractual    
    return menoractual    

def encontrarMayor(valor1,valor2,valor3):
    mayoractual=valor1
    if valor2 > mayoractual:
        mayoractual=valor2
        if valor3 > mayoractual:
          mayoractual=valor3    
        else:
         return mayoractual                   
    return mayoractual

def determinarResultadosIMC(numero):
    valor=numero
    if valor < 0 :
        return "IMC fuera de rango"
    elif valor < 16:
        return "Delgadez severa"
    elif valor < 17:
        return "Delgadez moderada"
    elif valor < 18.5:
        return "Delgadez leve"
    elif valor < 25:
        return "Peso normal"
    elif valor < 30:
        return "Sobrepeso"
    elif valor < 35:
        return "Obesidad Grado 1"
    elif valor < 40:
        return "Obesidad Grado 2"
    else:
        return "Obesidad Grado 3"  
